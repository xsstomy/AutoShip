# 数据库配置
# 运行在Cloudflare Workers时使用D1，否则使用SQLite
DB_PATH=./auto_ship.db

# 服务器配置
PORT=3000
NODE_ENV=development

# 支付网关配置
# 默认网关 (alipay 或 creem)
DEFAULT_GATEWAY=alipay

# 允许URL参数覆盖网关
ALLOW_GATEWAY_PARAM=true

# 网站基础URL
SITE_BASE_URL=http://localhost:5173

# 支付宝配置
ALIPAY_APP_ID=your_alipay_app_id
ALIPAY_APP_PRIVATE_KEY=your_alipay_private_key
ALIPAY_PUBLIC_KEY=your_alipay_public_key
ALIPAY_GATEWAY_HOST=https://openapi.alipay.com/gateway.do
ALIPAY_RETURN_URL=http://localhost:5173/return
ALIPAY_NOTIFY_URL=http://localhost:3000/api/webhooks/alipay

# Creem配置
CREEM_API_KEY=your_creem_api_key
CREEM_WEBHOOK_SECRET=your_creem_webhook_secret
CREEM_WEBHOOK_URL=http://localhost:3000/api/webhooks/creem

# 邮件服务配置 (Resend)
RESEND_API_KEY=re_your_resend_api_key

# 下载链接配置
DOWNLOAD_EXPIRE_HOURS=72
MAX_DOWNLOADS=3

# 后台管理配置
ADMIN_SECRET=your_admin_secret_key
